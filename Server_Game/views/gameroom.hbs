<h3 class="ms-5">Room name: {{roomid}}</h3>
<div id="board">
  <div id="board-container">
    <h4>Opponent: {{someone}}</h4>
    <div id="gameboard">
      <div class="square" id="0"></div>
      <div class="square" id="1"></div>
      <div class="square" id="2"></div>
      <div class="square" id="3"></div>
      <div class="square" id="4"></div>
      <div class="square" id="5"></div>
      <div class="square" id="6"></div>
      <div class="square" id="7"></div>
      <div class="square" id="8"></div>
    </div>
    <h4 class="text-end">{{player}}'s turn</h4>
    <h2 class="text-center text-success" id="result">{{player}} wins</h2>

  </div>

  <div id="chat-container m-0" style="width: 500px;">
    <h4>Chat</h4>
    <div class="message-container bg-light p-4">
      <ul
        id="message-list"
        class="list-group"
        style="text-decoration: none; height: 300px; overflow-y: scroll;"
      >

      </ul>
    </div>

    <div class="mb-3 d-flex d-row mt-2">
      <form class="d-flex d-row" id="commit-chat">
        <input
          type="text"
          class="form-control me-2"
          id="message-input"
          placeholder="Type your message"
        />
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
    <input type="hidden" id="user" value="{{username}}" />
  </div>
</div>
<script src="../public/js/game.js"></script>
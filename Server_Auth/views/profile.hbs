<div class="container mt-5">
  <div class="card">
    <h5 class="card-header">User Profile</h5>
    <div class="card-body">
      <div class="text-center">
        <img
          src="{{user.avatar}}"
          alt="Avatar"
          class="rounded-circle img-thumbnail"
          style="width: 150px; height: 150px; object-fit: cover;"
        />
      </div>
      <form>
        <div class="mb-3">
          <label for="username" class="form-label">Username:</label>
          <input
            type="text"
            class="form-control"
            id="username"
            value="{{user.username}}"
            readonly
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            class="form-control"
            id="password"
            value="********"
            readonly
          />
        </div>
        <div class="mb-3">
          <label for="fullname" class="form-label">Full Name:</label>
          <input
            type="text"
            class="form-control"
            id="fullname"
            value="{{user.fullname}}"
            readonly
          />
        </div>
        <button
          type="button"
          class="btn btn-primary"
          id="editButton"
          onclick="enableEditMode()"
        >Edit Profile</button>
      </form>
    </div>
  </div>
</div>
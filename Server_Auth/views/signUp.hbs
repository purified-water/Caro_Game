<div class="container d-flex justify-content-center">
  <div class="card w-50">
    <div class="card-header">Sign up</div>
    <div class="card-body">
      <form action="/signUp/user" method="post" id="form_signUp">
        
        <div class="form-group">
          <label for="username">Username</label>

          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
          />
        </div>

         <div class="form-group">
          <label for="fullname">Fullname</label>

          <input
            name="fullname"
            id="fullname"
            type="text"
            class="form-control"
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
          />
        </div>
         
         
         


        <button type="submit" class="btn btn-primary btn-block mt-5">
           Sign up
        </button>
      </form>

      
    </div>
  </div>
</div>
